{
    "compilerOptions": {
        "lib": ["ES2015"],
        "target": "ES6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "strict": true,
        "outDir": "build",
        "experimentalDecorators": true,

        "baseUrl": "src",

        "paths": {
            "@WyvernTypes/*": ["types/*"],
            "@WyvernGateway/*": ["gateway/*"],
            "@WyvernConstants/*": ["constants/*"],
            "@WyvernUtils/*": ["utils/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
