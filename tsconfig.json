{
    "compilerOptions": {
        "lib": ["ES2015"],
        "target": "ES6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "strict": true,
        "outDir": "build",
        "experimentalDecorators": true,

        "baseUrl": "src",

        "paths": {
            "@WyvernTypes/*": ["types/*"],
            "@gateway/*": ["gateway/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}